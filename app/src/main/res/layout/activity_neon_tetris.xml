<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fifth_phase"
    android:orientation="vertical">

    <RelativeLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

        <LinearLayout
                android:id="@+id/background"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:layout_marginTop="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal"
                android:background="@drawable/game_background"/>

        <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="50sp"
                android:text="@string/tetromino_cap"
                android:textColor="@color/fourth_phase"
                android:layout_alignEnd="@+id/background"
                android:layout_marginBottom="28dp"
                android:layout_alignBottom="@+id/background"
                android:layout_marginEnd="18dp"
                android:layout_marginStart="18dp"
                android:layout_alignStart="@+id/background"
                android:layout_alignTop="@+id/background"
                android:layout_marginTop="28dp"/>

    </RelativeLayout>

    <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:text=""
            android:textSize="20sp"
            android:textColor="@color/green"
            android:gravity="center"
            android:visibility="invisible"/>
    <TextView
            android:id="@+id/profile_highscore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal"
            android:text=""
            android:textSize="20sp"
            android:textColor="@color/green"
            android:gravity="center"
            android:visibility="invisible"/>

    <android.widget.Button
            android:id="@+id/launchGame"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/game_background"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="22dp"
            android:text="@string/play"/>

</LinearLayout>